<Window x:Class="BeyondDynamo.UI.OrderPlayerInputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeyondDynamo"
             mc:Ignorable="d" Width="186.2" Height="348.6" Background="#FF8C8C8C" Title="Order Input Nodes" WindowStartupLocation="CenterScreen" MinWidth="275" MinHeight="400" ResizeMode="NoResize">
	<Grid Name="MainGrid" Margin="0,0,-0.2,-0.8">
		<ListBox x:Name="InputNodesListBox" Margin="10,45,11,79" OpacityMask="Black" BorderBrush="Black" />
		<Label x:Name="selectedDirectoryLabel" Content="Input Nodes" Margin="10,10,9.8,0" VerticalAlignment="Top" Height="35"/>
		<Button Content="Move Up" HorizontalAlignment="Left" Margin="10,0,0,57" Width="120" Click="up_click" Height="22" VerticalAlignment="Bottom" Background="White"/>
		<Button Content="Move Down" Margin="0,0,12,57" Click="down_click" HorizontalAlignment="Right" Width="120" Height="22" VerticalAlignment="Bottom" Background="White"/>
		<Button Content="OK" HorizontalAlignment="Left" Margin="10,0,0,21" Width="120" Click="OK_Click" Height="21" VerticalAlignment="Bottom" Background="White"/>
	</Grid>
</Window>
