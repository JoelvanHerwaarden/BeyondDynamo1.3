<Window x:Name="Search_Workspace" x:Class="BeyondDynamo.UI.SearchWorkspaceWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeyondDynamo"
             mc:Ignorable="d" Height="242" Width="384" Title="Search Workspace" Foreground="Black">
	<Grid Name="MainGrid" Margin="0,0,0,0" Background="#FF2A2A2A">
		<TextBox x:Name="searchBar" Margin="10,10,10.6,0" TextWrapping="Wrap"  Background="#FFBCBCC2" FontSize="16" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" TextChanged="SearchBox_TextChanged" Height="28" VerticalAlignment="Top" MaxLines="1" MinHeight="1" Width="358"/>
		<ListBox x:Name="FoundNodesListbox" Margin="10,43,10.6,46.6" Background="#FFBCBCC2" SelectionChanged="FoundNodesListbox_SelectionChanged"/>
		<Button x:Name="RefreshButton" Content="Refresh" Margin="0,0,10.6,10.6" Background="White" Height="31" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="109" Click="RefreshButton_Click"/>

	</Grid>
</Window>
